[Unit]
Description=Shepherd resize image helper Service for Hills Road RoboCon
Requires=hopper.service
After=local-fs.target hopper.service
StartLimitIntervalSec=0

[Service]
WorkingDirectory=/home/pi/shepherd
Type=simple
Restart=always
RestartSec=1
User=root
Group=root
ExecStart=/usr/bin/env python3 /home/pi/shepherd/helper.py
SyslogIdentifier=ShepherdWebSockets

[Install]
WantedBy=shepherd.service

